FROM lukemathwalker/cargo-chef:latest-rust-1 AS chef



### PLANNER
FROM chef AS planner

# Preprae for auth
WORKDIR /auth
COPY /auth .
RUN cargo chef prepare --recipe-path recipe.json



### BUILDER
FROM chef AS builder

# Cook auth
WORKDIR /auth
COPY --from=planner /auth/recipe.json recipe.json
RUN cargo chef cook --release --recipe-path recipe.json



# Build auth
COPY / /
RUN cargo build --release --bin auth


### FINAL - We do not need the Rust toolchain to run the binary!
FROM debian:bookworm-slim AS runtime

# Install the PostgreSQL client libraries
RUN apt-get update && \
    apt-get install -y libpq5 && \
    rm -rf /var/lib/apt/lists/*  # Clean up apt cache

WORKDIR /auth
COPY --from=builder /auth/target/release/auth /usr/local/bin
ENTRYPOINT ["/usr/local/bin/auth"]